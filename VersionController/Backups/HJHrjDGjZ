var formatTaaccounting-table"> <tr> <th class="col-date">Date</th> <th class="col-accounts">Accounts</th> <th class="col-dc">Debit</th> <th class="col-dc">Credit</th> </tr><tr id="first-row"> <td></td><td>Petty Cash</td><td class="col-amount">500</td><td class="col-amount"></td></tr><tr> <td></td><td>Cash</td><td class="col-amount"></td><td class="col-amount">500</td></tr></table>';tinymce.init({selector:"textarea",plugins:"table textcolor colorpicker",toolbar:"mybutton add-table make-credit make-debit double-line preview",menubar:!1,height:300,branding:!1,elementpath:!1,content_css:["style.css"],table_toolbar:"tabledelete | tableinsertrowbefore tableinsertrowafter tabledeleterow",formats:{indent_cell:{selector:"td",styles:{"text-indent":"40px"}},unindent_cell:{selector:"td",styles:{"text-indent":"0px"}},double_line:{selector:"td",styles:{"border-bottom-style":"double"}}},setup:function(t){t.addButton("add-table",{icon:"mce-ico mce-i-table2",text:"Add T Account",onclick:function(){t.insertContent(formatTable)}}),t.addButton("make-credit",{icon:"mce-ico mce-i-indent",text:"Set Credit Description",onclick:function(){tinymce.activeEditor.formatter.apply("indent_cell")}}),t.addButton("make-debit",{icon:"mce-ico mce-i-outdent",text:"Set Debit Description",onclick:function(){tinymce.activeEditor.formatter.apply("unindent_cell")}}),t.addButton("double-line",{icon:"mce-ico mce-i-underline",text:"Double Line",onclick:function(){tinymce.activeEditor.formatter.apply("double_line")}}),t.addButton("preview",{icon:"mce-ico mce-i-preview",text:"Preview",onclick:function(){$("#content-previewer").html(tinymce.activeEditor.getContent())}})}});